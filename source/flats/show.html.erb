

<div class="banner show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
</div>

<div class="white-wrapper">
  <div class="container">
    <!-- Inject flat data in template -->

<br>

    <div class="row">

      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">

          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{flat.user}", class: "img-circle", width: "80" %>
          <p><%= flat.title %></p>
          <h1><%= flat.desc %></h1>
          <p><%= flat.city %>, <%= flat.country %></p>

        </div>
      </div>


      <div class="col-xs-12 col-sm-4">
        <form action="#" >
          <h3>Book this flat</h3>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
        </form>
      </div>
    </div>


  </div>
</div>
